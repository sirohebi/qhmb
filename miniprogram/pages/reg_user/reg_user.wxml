<view class="container">
	<view class="content">
		<text class="title">用户注册</text>
		<view class="registr">
			<l-input label-width="180" class="username" label-layout="right" type="text" label="用户名" />
			<l-input label-width="180" class="move_phone" label-layout="right" type="number" label="联系电话" />
