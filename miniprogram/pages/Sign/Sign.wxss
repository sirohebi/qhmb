/* miniprogram/pages/Sign/Sign.wxss */
.connertai{
    display: flex;
    flex-direction: column;
    width: 100%;
    align-items: center;
}

.head{
    align-self: flex-end;
    margin-right: 20rpx;
    margin-top: 20rpx;
}

.sign-content{
    margin-top: 25%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.sign-img{
    width:240rpx;
    height: 240rpx;
    padding: 20rpx;
    box-shadow: 5px 5px 5px #d3d3d3;
}

.sign-input{
    margin-top: 60rpx;
    height: 60rpx;
    background-color: #ededed;
    border-radius: 10rpx;
}

.sign-submit{
    background-color: #dcdcdc;
    margin-top: 20rpx;
}